<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavBarFragment">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="416dp"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:onClick="onMyProfileClick"
                app:srcCompat="@drawable/ic_my_profile_foreground" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:onClick="showDonationsList"
                app:srcCompat="@drawable/ic_list_foreground" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:onClick="showRequestsList"
                app:srcCompat="@drawable/ic_notification_foreground" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_create_new_req_foreground"
                android:onClick="createNewReq"

                />


        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</FrameLayout>